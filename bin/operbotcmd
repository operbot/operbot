__version__ = "123"


"feeding rss into your irc channel"


import os
import pwd
import sys


from stat import ST_UID, ST_GID


from operbot.object import Wd, cdir, lower, permission, update
from operbot.handler import Cfg, Command, Handler, command, parse, scan


from operbot import cmds, irc, rss


Wd.workdir = "/var/lib/operbot/"


scan(cmds)
scan(irc)
scan(rss)


class CLI(Handler):

    @staticmethod
    def raw(txt):
        print(txt)


def main():
    txt = ' '.join(sys.argv[1:])
    cfg = parse(txt)
    update(Cfg, cfg)
    cli = CLI()
    evt = command(cli, cfg.otxt)
    evt.wait()


main()
