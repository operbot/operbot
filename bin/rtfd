"create website"


import os


def popen(txt):
    for line in os.popen(txt).readlines():
        print(line.rstrip())


if os.path.exists("env"):
     print("environment is there")
else:
     print("creating environment")
     popen("bin/upenv")

popen("env/bin/python3 env/bin/sphinx-build docs html")
