"create env"


import os


def popen(txt):
    for line in os.popen(txt).readlines():
        print(line.rstrip())



popen("rm -fR ~/.cache/pip")
popen("bins/clean")
popen("python3 setup.py bdist_wheel")
popen("python3 -mvirtualenv --no-download env")
popen("env/bin/pip3 install operbot -f dist --force-reinstall --no-deps")
